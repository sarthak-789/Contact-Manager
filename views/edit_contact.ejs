<%- include ('partials/header') %>

<form action="/user/<%= user._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="Name">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter your Name" name="user[name]" value="<%= user.name %>">
    </div>
    <div class="form-group">
      <label for="dob">Date of Birth:</label>
      <input type="date" class="form-control" id="dob" placeholder="Enter your DOB" name="user[dob]" value="<%= user.dob %>">
    </div>
    <div class="form-group">
        <label for="mobile">Contact No.:</label>
        <div class="inc">
            <input type="number" class="form-control" id="mobile" placeholder="Enter your Contact no." name="user[phone]" value="<%= user.phone %>">
            <a href=""><i class="fa fa-plus fa-lg"></i></a >
        </div>
    </div>
    <div class="form-group ">
        <label for="email">Email:</label>
        <div class="inc">
            <input type="email" class="form-control" id="email" placeholder="Enter your Email ID" name="user[email]" value="<%= user.email %>">
            <a href=""><i class="fa fa-plus fa-lg"></i></a >
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<%- include ('partials/footer') %>