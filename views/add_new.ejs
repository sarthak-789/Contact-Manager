<%- include ('partials/header') %>

<form action="/user" method="POST">
    <div class="form-group">
      <label for="Name">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter your name" name="user[name]">
    </div>
    <div class="form-group">
      <label for="dob">Date of Birth:</label>
      <input type="date" class="form-control" id="dob" placeholder="Enter your DOB" name="user[dob]">
    </div>
    <div class="form-group">
        <label for="mobile">Contact No.:</label>
        <div class="inc">
            <input type="number" class="form-control" id="mobile" placeholder="Enter your Contact no." name="user[phone]">
            <a href=""><i class="fa fa-plus fa-lg"></i></a >
        </div>
    </div>
    <div class="form-group ">
        <label for="email">Email:</label>
        <div class="inc">
            <input type="email" class="form-control" id="email" placeholder="Enter your Email ID" name="user[email]">
            <a href=""><i class="fa fa-plus fa-lg"></i></a >
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<%- include ('partials/footer') %>